<% layout("/layouts/boilerplate.ejs") -%>

<div class="container py-5">
  <h2 class="text-center text-primary fw-bold mb-4">Photo Gallery</h2>

  <% if (images.length > 0) { %>
    <div class="row g-4">
      <% images.forEach(function(image) { %>
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
          <div class="card shadow-sm h-100">
            <img
              src="data:image/jpeg;base64,<%= image.image.toString('base64') %>"
              alt="<%= image.title %>"
              class="card-img-top img-fluid"
              style="object-fit: cover; height: 200px;"
            />
            <div class="card-body">
              <h5 class="card-title text-center"><%= image.title %></h5>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  <% } else { %>
    <p class="text-muted text-center">No images found.</p>
  <% } %>
</div>
