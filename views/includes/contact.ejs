<% layout("/layouts/boilerplate.ejs") -%>

<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-lg border-0">
        <div class="card-body p-5">
          <h2 class="text-center text-primary mb-4 fw-bold">
            <i class="fas fa-envelope-open-text me-2"></i>Contact Us
          </h2>

          <% if (typeof error !== "undefined" && error) { %>
            <div class="alert alert-danger text-center" role="alert">
              <%= error %>
            </div>
          <% } %>

          <% if (typeof success !== 'undefined' && success === 'true') { %>
            <div class="alert alert-success text-center" role="alert">
              Your message has been sent successfully!
            </div>
          <% } %>

          <form action="/contact" method="POST">
            <div class="mb-3">
              <label for="name" class="form-label">Your Name</label>
              <div class="input-group">
                <span class="input-group-text"><i class="fas fa-user"></i></span>
                <input type="text" name="name" id="name" class="form-control" placeholder="John Doe" required />
              </div>
            </div>

            <div class="mb-3">
              <label for="email" class="form-label">Your Email</label>
              <div class="input-group">
                <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                <input type="email" name="email" id="email" class="form-control" placeholder="john@example.com" required />
              </div>
            </div>

            <div class="mb-4">
              <label for="message" class="form-label">Your Message</label>
              <textarea name="message" id="message" class="form-control" rows="5" placeholder="Write your message here..." required></textarea>
            </div>

            <div class="text-center">
              <button type="submit" class="btn btn-primary px-5 py-2 shadow-sm">
                <i class="fas fa-paper-plane me-2"></i>Send Message
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
