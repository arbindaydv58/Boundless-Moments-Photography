<% layout("/layouts/boilerplate.ejs") -%>

<!-- Hero Banner Section -->
<section class="hero-banner" style="background-image: url('/images/hero-banner.jpg'); height: 80vh; background-size: cover; background-position: center;">
  <div class="overlay d-flex justify-content-center align-items-center text-center text-white" style="background: rgba(0, 0, 0, 0.6); height: 100%;">
    <div>
      <h1 class="display-4 fw-bold shadow-lg">Boundless Moments Photography</h1>
      <p class="lead mt-3 fs-4">Crafting stories through the lens.</p>
      <a href="/portfolio" class="btn btn-light btn-lg mt-4 px-5 py-3">Explore Portfolio</a>
    </div>
  </div>
</section>

<!-- Services Section -->
<section class="py-5 bg-light">
  <div class="container text-center">
    <h2 class="fw-bold mb-4 text-primary">Our Services</h2>
    <div class="row g-4 justify-content-center">
      
      <!-- Gallery Card -->
      <div class="col-12 col-md-6 col-lg-3">
        <div class="card shadow-sm border-0">
          <!-- <img src="/images/gallery.jpg" class="card-img-top" alt="Gallery"> -->
          <div class="card-body">
            <h5 class="card-title text-primary">Gallery</h5>
            <p class="card-text">Browse through our stunning photography collection.</p>
            <a href="/photo" class="btn btn-outline-primary w-100">View Gallery</a>
          </div>
        </div>
      </div>

      <!-- Experience & Skills Card -->
      <div class="col-12 col-md-6 col-lg-3">
        <div class="card shadow-sm border-0">
          <!-- <img src="/images/experience.jpg" class="card-img-top" alt="Experience"> -->
          <div class="card-body">
            <h5 class="card-title text-primary">Experience & Skills</h5>
            <p class="card-text">Learn about our extensive experience and expertise in photography.</p>
            <a href="/experience" class="btn btn-outline-primary w-100">Explore</a>
          </div>
        </div>
      </div>

      <!-- Contact Card -->
      <div class="col-12 col-md-6 col-lg-3">
        <div class="card shadow-sm border-0">
          <!-- <img src="/images/contact.jpg" class="card-img-top" alt="Contact"> -->
          <div class="card-body">
            <h5 class="card-title text-primary">Contact</h5>
            <p class="card-text">Get in touch to schedule a session or ask any questions.</p>
            <a href="/contact" class="btn btn-outline-primary w-100">Contact Us</a>
          </div>
        </div>
      </div>

    </div>
  </div>
</section>



